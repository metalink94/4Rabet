<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.rabbet.forrabet"
    >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.FourRabetApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"


        >
        <activity android:name=".screen.webView.MainActivity"/>
        <activity android:name=".utils.BaseActivity" />
        <activity android:name=".screen.menu.MenuActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".screen.about.AboutActivity" />
        <activity android:name=".screen.results.ResultsActivity" />
    </application>
</manifest>
